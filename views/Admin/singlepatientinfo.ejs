d<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= patval.Fname %> - CareSphere</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="CSS/singlepatientinfo.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://kit.fontawesome.com/c39c442009.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</head>
<body>

<!-- Navbar -->
<nav class="navbar-top fixed w-full z-20 top-0 left-0">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="#" class="flex items-center">
            <img src="https://flowbite.com/docs/images/logo.svg" class="h-8 mr-3" alt="Logo">
            <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">CareSphere</span>
        </a>
        <div class="profile"></div>
        <button class="btun" data-bs-toggle="modal" data-bs-target="#mainModal">
            <span class="icon">
                <svg viewBox="0 0 175 80" width="40" height="40">
                    <rect width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                    <rect y="30" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                    <rect y="60" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
                </svg>
            </span>
            <span class="text">MENU</span>
        </button>
    </div>
</nav>

<!-- Main Modal -->
<div class="main-modal">
    <div class="modal fade" id="mainModal" data-bs-overflow="hidden" tabindex="-1" aria-labelledby="mainModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <% if (data.Lname == '' && data.Mname == ''){ %>
                        <div class="profimg"><img src="<%= data.image %>" alt=""></div> <h1 class="modal-title fs-5" id="mainModalLabel"><%= data.Fname %></h1>
                        <% }else if(data.Mname == ''){ %>
                        <div class="profimg"><img src="<%= data.image %>" alt=""></div> <h1 class="modal-title fs-5" id="mainModalLabel"><%= data.Fname %> <%= data.Lname %></h1>
                        <% }else{ %>
                        <div class="profimg"><img src="<%= data.image %>" alt=""></div> <h1 class="modal-title fs-5" id="mainModalLabel"><%= data.Fname %> <%= data.Mname %> <%= data.Lname %></h1>
                        <% } %>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span class="material-symbols-outlined">
                            close
                        </span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="list">
                        <ul>
                            <a href="/admin?username=<%= data.username %>"><li><span>Home</span></li></a>
                            <a href="/doctorinfo?username=<%= data.username %>"><li><span>Doctors</span></li></a>
                            <a href="/staffinfo?username=<%= data.username %>"><li><span>Staff</span></li></a>
                            <a href="/patientinfo?username=<%= data.username %>"><li><span>Patients</span></li></a>
                            <a href="/changelog?username=<%= data.username %>"><li><span>ChangeLogs</span></li></a>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- Glass Div -->
<div class="containers">
    <!-- Doctor card -->
    <div class="card-container">
        <div class="wrapper box">
            <div class="card front-face">
               <img src="<%= patval.image %>">
            </div>
            <div class="card back-face">
               <div class="info">
                    <h1 class="title"><span>Admit Time :</span> <%= patval.admitTime %></h1>
                    <h1 class="title"><span>Report :</span> <%= patval.report %></h1>
                    <h1 class="title"><span>Date of Birth :</span> <%= patval.dob %></h1>
                    <h1 class="title"><span>Age :</span> <%= patval.age %></h1>
                    <h1 class="title"><span>Blood Group :</span> <%= patval.blood_group %></h1>
                    <h1 class="title"><span>Sex :</span> <%= patval.sex %></h1>
                    <h1 class="title"><span>Allergies :</span> <%= patval.allergies %></h1>
                    <h1 class="title"><span>Treatment :</span> <%= patval.treatment %></h1>
                    <h1 class="title"><span>Discharged :</span> <%= patval.discharged %></h1>
                    <h1 class="title"><span>Reason :</span> <%= patval.reason %></h1>
               </div>
            </div>
         </div>
         <div class="box right">
            <% if (patval.Lname == '' && patval.Mname == ''){ %>
                <h1 class="flexbox"><%= patval.Fname %></h1>
            <% }else if(patval.Mname == ''){ %>
                <h1 class="flexbox"><%= patval.Fname %> <%= patval.Lname %></h1>
            <% }else{ %>
                <h1 class="flexbox"><%= patval.Fname %> <%= patval.Mname %> <%= patval.Lname %></h1>
            <% } %>
            <h2 class="flexbox"><%= patval.room %></h2>
            <h2 class="flexbox"><%= patval.phone %></h2>
            <h2 class="flexbox"><%= patval.email %></h2>
            <div class="buttons" style="display: flex; flex-direction: row; margin-top: 3rem;">
                <button class="contact bttun" data-bs-toggle="modal" data-bs-target="#contactModal">Edit Details</button>
                <a>
                        <button class="bttun" data-bs-toggle="modal" data-bs-target="#assignModal" style="width: 10rem; margin-left: 3rem;">
                            <span>Assign Doctor/Staff</span>
                        </button>
                </a>
                <a>
                    <% if(type == "Patient"){ %>
                        <form action="/<%= route %>" method="get">
                        <input type="hidden" name="username" value="<%= data.username %>">
                    <% }else{ %>
                        <form action="/<%= route %>" method="post">
                        <input type="hidden" name="adminid" value="<%= data.id %>">
                    <% } %>
                        
                        <% if(type != "Patient"){ %>
                            <input type="hidden" name="id" value="<%= val.id %>">
                        <% } %>
                        <button class="bttun" type="submit" style="width: 10rem; margin-left: 3rem;">
                            <svg height="16" width="16" xmlns="http://www.w3.org/2000/svg" version="1.1" viewBox="0 0 1024 1024"><path d="M874.690416 495.52477c0 11.2973-9.168824 20.466124-20.466124 20.466124l-604.773963 0 188.083679 188.083679c7.992021 7.992021 7.992021 20.947078 0 28.939099-4.001127 3.990894-9.240455 5.996574-14.46955 5.996574-5.239328 0-10.478655-1.995447-14.479783-5.996574l-223.00912-223.00912c-3.837398-3.837398-5.996574-9.046027-5.996574-14.46955 0-5.433756 2.159176-10.632151 5.996574-14.46955l223.019353-223.029586c7.992021-7.992021 20.957311-7.992021 28.949332 0 7.992021 8.002254 7.992021 20.957311 0 28.949332l-188.073446 188.073446 604.753497 0C865.521592 475.058646 874.690416 484.217237 874.690416 495.52477z"></path></svg>
                            <span>Back</span>
                        </button>
                    </form>
                </a>
            </div>
        </div>
    </div>
</div>



<!-- Contact Modal -->
<div class="contact-modal new-mod">
    <div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="container" style="margin-left: 5rem;">
                    <form class="form" method="post" action="/changedoctordetails">
                        <div class="descr">
                            <p class="edit">Edit Details</p>
                            <p>Make changes to your profile. Click <b>save</b> once your done.</p>
                          </div>
                      <div class="name-cont">
                        <div class="input">
                          <input placeholder="<%= patval.Fname %>" type="text" name="Fname">
                          <label for="name">First Name</label>
                      </div>
                      <div class="input">
                          <input placeholder="<%= patval.Mname %>" type="text" name="Mname">
                          <label for="name">Middle Name</label>
                      </div>
                      <div class="input">
                          <input placeholder="<%= patval.Lname %>" type="text" name="Lname">
                          <label for="name">Last Name</label>
                      </div>
                      </div>
                
                      <div class="input-img">
                        <div class="img-next">
                        <div class="input em-input">
                          <input placeholder="<%= patval.username %>" name="username" type="text">
                          <label for="email">Username</label>
                      </div>
                
                      <div class="input">
                          <input placeholder="<%= patval.phone %>" cols="30" rows="1" id="phone" name="password">
                          <label for="phone">Password</label>
                      </div>
                      </div>
                      
                      <div class="imgg">
                        <label for="file" class="custum-file-upload">
                            <div class="icon">
                                <svg viewBox="0 0 24 24" fill="" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M10 1C9.73478 1 9.48043 1.10536 9.29289 1.29289L3.29289 7.29289C3.10536 7.48043 3 7.73478 3 8V20C3 21.6569 4.34315 23 6 23H7C7.55228 23 8 22.5523 8 22C8 21.4477 7.55228 21 7 21H6C5.44772 21 5 20.5523 5 20V9H10C10.5523 9 11 8.55228 11 8V3H18C18.5523 3 19 3.44772 19 4V9C19 9.55228 19.4477 10 20 10C20.5523 10 21 9.55228 21 9V4C21 2.34315 19.6569 1 18 1H10ZM9 7H6.41421L9 4.41421V7ZM14 15.5C14 14.1193 15.1193 13 16.5 13C17.8807 13 19 14.1193 19 15.5V16V17H20C21.1046 17 22 17.8954 22 19C22 20.1046 21.1046 21 20 21H13C11.8954 21 11 20.1046 11 19C11 17.8954 11.8954 17 13 17H14V16V15.5ZM16.5 11C14.142 11 12.2076 12.8136 12.0156 15.122C10.2825 15.5606 9 17.1305 9 19C9 21.2091 10.7909 23 13 23H20C22.2091 23 24 21.2091 24 19C24 17.1305 22.7175 15.5606 20.9844 15.122C20.7924 12.8136 18.858 11 16.5 11Z" fill=""></path> </g></svg>
                            </div>
                            <div class="text">
                               <span>Click to upload image</span>
                            </div>
                            <input id="file" type="file" onchange="previewImage()" name="img">
                            <a id="image-preview-link" href="<%= patval.image %>" download style="display: inline; margin-top: -1rem;">Click here to view upload</a>
                        </label>
                      </div>
                      </div>
                      
                      <div class="name-cont">
                        <div class="input">
                            <input placeholder="<%= patval.email %>" type="text" name="email">
                            <label for="name">Email</label>
                        </div>
                        <div class="input">
                            <input placeholder="<%= patval.phone %>" type="text" name="phone">
                            <label for="name">Phone</label>
                        </div>
                        <div class="input">
                          <input placeholder="<%= patval.dob %>" type="text" name="dob">
                          <label for="name">DOB(YYYY/MM/DD)</label>
                      </div>
                      </div>

                      <div class="name-cont">
                        <div class="input">
                            <input placeholder="<%= patval.blood_group %>" type="text" name="bg">
                            <label for="name">Blood Group</label>
                        </div>
                        <div class="input">
                            <input placeholder="<%= patval.sex %>" type="text" name="sex">
                            <label for="name">Sex(M/F)</label>
                        </div>
                        <div class="input">
                          <input placeholder="<%= patval.allergies %>" type="text" name="aller">
                          <label for="name">Allergies</label>
                      </div>
                      </div>

                      <div class="name-cont">
                        <div class="input">
                            <input placeholder="<%= patval.treatment %>" type="text" name="bg">
                            <label for="name">Treatment</label>
                        </div>
                        <div class="input">
                            <input placeholder="<%= patval.discharged %>" type="text" name="sex">
                            <label for="name">Discharged</label>
                        </div>
                        <div class="input">
                          <input placeholder="<%= patval.reason %>" type="text" name="aller">
                          <label for="name">Reason</label>
                      </div>
                      </div>
                      
                      <input type="hidden" name="id" value="<%= patval.id %>">
                      <input type="hidden" name="adminid" value="<%= data.id %>">
    
                      <button type="submit" class="qualsub" style="margin-top: 5rem;">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="qual-modal">
    <div class="modal fade" id="assignModal" tabindex="-1" aria-labelledby="assignModal" aria-hidden="true" data-backdrop="false" style="overflow: hidden;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignModal">Choose the doctors and staffs to be assigned</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/patupdate" method="post">
                        <div class="top row">
                            <button class="col doc" type="button">Doctors</button>
                            <button class="col staff darkened" type="button">Staff</button>
                        </div>
                            <% for (let i = 0; i < doctor.length; i++){ %>
                                <label class="hamburger D" style="display: flex;">
                                    <input type="checkbox" name="doc[<%= i %>]" value="<%= doctor[i].id %>">
                                    <svg viewBox="0 0 32 32">
                                        <path class="line line-top-bottom" d="M27 10 13 10C10.8 10 9 8.2 9 6 9 3.5 10.8 2 13 2 15.2 2 17 3.8 17 6L17 26C17 28.2 18.8 30 21 30 23.2 30 25 28.2 25 26 25 23.8 23.2 22 21 22L7 22"></path>
                                        <path class="line" d="M7 16 27 16"></path>
                                    </svg>
                                    <span class="person-name"><%= doctor[i].Fname %> - <%= doctor[i].speciality %></span>
                                </label>
                            <% } %>
                            <% for (let j = 0; j < staff.length; j++){ %>
                                <label class="hamburger S hide" style="display: flex;">
                                    <input type="checkbox" name="staff[<%= j %>]" value="<%= staff[j].id %>">
                                    <svg viewBox="0 0 32 32">
                                        <path class="line line-top-bottom" d="M27 10 13 10C10.8 10 9 8.2 9 6 9 3.5 10.8 2 13 2 15.2 2 17 3.8 17 6L17 26C17 28.2 18.8 30 21 30 23.2 30 25 28.2 25 26 25 23.8 23.2 22 21 22L7 22"></path>
                                        <path class="line" d="M7 16 27 16"></path>
                                    </svg>
                                    <span class="person-name"><%= staff[j].Fname %> - <%= staff[j].designation %></span>
                                </label>
                            <% } %>
                            
                                <input type="hidden" name="patId" value="<%= patval.id %>">
                                <input type="hidden" name="type" value="<%= type %>">
                                <input type="hidden" name="adminId" value="<%= data.id %>">
                                <% if(type != "Patient"){ %>
                                    <input type="hidden" name="id" value="<%= val.id %>">
                                <% } %>
                            <button type="submit" class="bttun assignButton">Confirm</button>
                        </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    const doctorsButton = document.querySelector('.col.doc');
    const staffButton = document.querySelector('.col.staff');

    const doctorDivs = document.querySelectorAll('.D');
    const staffDivs = document.querySelectorAll('.S');

    staffButton.addEventListener('click', function () {
        doctorsButton.classList.add('darkened');
        staffButton.classList.remove('darkened');

        doctorDivs.forEach(div => div.classList.add('hide'));
        staffDivs.forEach(div => div.classList.remove('hide'));
    });

    doctorsButton.addEventListener('click', function () {
        staffButton.classList.add('darkened');
        doctorsButton.classList.remove('darkened');

        doctorDivs.forEach(div => div.classList.remove('hide'));
        staffDivs.forEach(div => div.classList.add('hide'));
    });
});

</script>
</body>
</html>